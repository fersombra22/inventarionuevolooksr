<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nuevolooksr.stock.controllers.MainController">

    <top>
        <Label text="Gestión de Stock - NuevoLookSR" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </top>
    <center>
        <VBox fx:id="menuVBox" alignment="CENTER" spacing="10">
            <Button text="Gestión de Productos" fx:id="openProductos" onAction="#handleOpenProductos"/>
            <Button text="Gestión de Categorías" fx:id="openCategorias" onAction="#handleOpenCategorias"/>
        </VBox>
    </center>
</BorderPane>

